<!DOCTYPE html>
<html>
  <head>
    <title>Aberrant Barter</title>
    <%= csrf_meta_tags %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <span class="navbar-brand"><%= link_to 'Aberrant Barter', root_path %></span>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to 'View Trades', trades_path %></li>
        <% if current_user %>
          <li><%= link_to 'Add Trade', new_trade_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if current_user %>
          <li class="navbar-text">Welcome, <%= current_user.name.capitalize %></li>
          <li><%= link_to 'Profile', profile_path %></li>
          <li><%= link_to 'Log Out', session_path('dummy'), method: :delete %></li>
        <% else %>
          <li class=""><%= link_to 'Log In', login_path %></li>
          <li class=""><%= link_to 'Sign Up', new_user_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
